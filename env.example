# ========================================
# 🎨 Portfolio API Environment Configuration
# ========================================

# 🌍 Environment Mode
# development, production, test
NODE_ENV=development

# 🚀 Server Configuration
# پورت سرور - می‌تونی تغییرش بدی
PORT=3000

# ========================================
# 🗄️ Database Configuration (MySQL)
# ========================================

# اتصال دیتابیس MySQL
# فرمت: mysql://username:password@host:port/database_name
# برای Docker: mysql://portfolio_user:portfolio_password@mysql:3306/portfolio_db
# برای localhost: mysql://root:password@localhost:3306/portfolio_db
DATABASE_URL="mysql://portfolio_user:portfolio_password@localhost:3306/portfolio_db"

# نام دیتابیس
MYSQL_DATABASE=portfolio_db

# نام کاربر دیتابیس
MYSQL_USER=portfolio_user

# رمز عبور کاربر دیتابیس
MYSQL_PASSWORD=portfolio_password

# رمز عبور root دیتابیس (برای Docker)
MYSQL_ROOT_PASSWORD=root_password

# ========================================
# 🔐 Security Configuration
# ========================================

# کلید JWT برای احراز هویت
# حتماً این رو تغییر بده و طولانی و پیچیده کن
# حداقل 32 کاراکتر باشه
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# تعداد دورهای bcrypt برای رمزگذاری
# بیشتر = امن‌تر اما کندتر (پیش‌فرض: 12)
BCRYPT_ROUNDS=12

# ========================================
# 📁 File Upload Configuration
# ========================================

# حداکثر اندازه فایل آپلود (به بایت)
# 10MB = 10485760 bytes
# 5MB = 5242880 bytes
MAX_FILE_SIZE=10485760

# مسیر ذخیره فایل‌های آپلود شده
UPLOAD_PATH=./uploads

# ========================================
# 🌐 CORS Configuration
# ========================================

# دامنه اصلی
MAIN_DOMAIN=yourdomain.com

# دامنه‌های مجاز برای CORS
# برای توسعه: http://localhost:3000,http://localhost:3001
# برای تولید: https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com,https://admin.yourdomain.com

# ========================================
# 🔴 Redis Configuration (Optional)
# ========================================

# اتصال Redis برای کش
# برای Docker: redis://redis:6379
# برای localhost: redis://localhost:6379
# اگر نمی‌خوای از Redis استفاده کنی، این خط رو کامنت کن
# REDIS_URL=redis://localhost:6379

# ========================================
# 📊 Logging Configuration (Optional)
# ========================================

# سطح لاگ (error, warn, info, debug)
LOG_LEVEL=info

# مسیر فایل لاگ
LOG_FILE=./logs/app.log

# ========================================
# 🚨 Important Notes
# ========================================

# ⚠️  حتماً این موارد رو تغییر بده:
# 1. JWT_SECRET - کلید JWT رو تغییر بده
# 2. MYSQL_PASSWORD - رمز دیتابیس رو تغییر بده
# 3. MYSQL_ROOT_PASSWORD - رمز root رو تغییر بده
# 4. DATABASE_URL - اگر از Docker استفاده نمی‌کنی، آدرس رو تغییر بده

# 🔒 برای تولید:
# - NODE_ENV=production
# - JWT_SECRET رو خیلی طولانی و پیچیده کن
# - CORS_ORIGIN رو محدود کن به دامنه‌های واقعی
# - پورت‌های دیتابیس رو از بیرون ببند 